@page
@model DoneInAGiffy.Pages.GIFs.ViewGIFsModel
@{
    Layout = HttpContext.User.Identity.IsAuthenticated ? "_LayoutAuthenticated" : "_Layout";
}
<div class="row m-2 border">
    <div class="row m-2">
        <div class="col-2">
            <a href="../GIFs/AddGIF" class="btn btn-primary">Add GIF</a>
        </div>
    </div>
</div>
@foreach (var GIF in Model.GIFs)
{
    <div class="row m-2 border">
        <div class="row m-2">
            <div class="col-2">
                <label class="form-label" asp-for="@GIF.gifTitle"></label>
            </div>
            <div class="col-10">
                <label class="form-label">@GIF.gifTitle</label>
            </div>
        </div>
    </div>
    <div class="row m-2 border">
        <div class="row m-2">
            <div class="col-2">
                <label class="form-label" asp-for="@GIF.gifDescription"></label>
            </div>
            <div class="col-10">
                <label class="form-label">@GIF.gifDescription</label>
            </div>
        </div>
    </div>
    <div class="row m-2 border">
        <div class="row m-2">
            <div class="col-2">
                <label class="form-label" asp-for="@GIF.gifUploadDate"></label>
            </div>
            <div class="col-10">
                <label class="form-label">@GIF.gifUploadDate</label>
            </div>
        </div>
    </div>
    <div class="row m-2 border">
        <div class="row m-2">
            <div class="col-2">
                <label class="form-label" asp-for="@GIF.gifLink"></label>
            </div>
            <div class="col-10">
                <label class="form-label">@GIF.gifLink</label>
            </div>
        </div>
    </div>
    <div class="row m-2 border">
        <div class="row m-2">
            <div class="col-2">
                <a asp-page="EditGIF" asp-route-id="@GIF.gifID" class="btn btn-primary">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pen-fill" viewBox="0 0 16 16">
                        <path d="m13.498.795.149-.149a1.207 1.207 0 1 1 1.707 1.708l-.149.148a1.5 1.5 0 0 1-.059 2.059L4.854 14.854a.5.5 0 0 1-.233.131l-4 1a.5.5 0 0 1-.606-.606l1-4a.5.5 0 0 1 .131-.232l9.642-9.642a.5.5 0 0 0-.642.056L6.854 4.854a.5.5 0 1 1-.708-.708L9.44.854A1.5 1.5 0 0 1 11.5.796a1.5 1.5 0 0 1 1.998-.001" />
                    </svg>
                    Edit
                    </a>
                <a asp-page="DeleteGIF" asp-route-id="@GIF.gifID" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this GIF?')">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash3-fill" viewBox="0 0 16 16">
                        <path d="M11 1.5v1h3.5a.5.5 0 0 1 0 1h-.538l-.853 10.66A2 2 0 0 1 11.115 16h-6.23a2 2 0 0 1-1.994-1.84L2.038 3.5H1.5a.5.5 0 0 1 0-1H5v-1A1.5 1.5 0 0 1 6.5 0h3A1.5 1.5 0 0 1 11 1.5m-5 0v1h4v-1a.5.5 0 0 0-.5-.5h-3a.5.5 0 0 0-.5.5M4.5 5.029l.5 8.5a.5.5 0 1 0 .998-.06l-.5-8.5a.5.5 0 1 0-.998.06m6.53-.528a.5.5 0 0 0-.528.47l-.5 8.5a.5.5 0 0 0 .998.058l.5-8.5a.5.5 0 0 0-.47-.528M8 4.5a.5.5 0 0 0-.5.5v8.5a.5.5 0 0 0 1 0V5a.5.5 0 0 0-.5-.5" />
                    </svg>
                    Delete
                    </a>
            </div>
        </div>
    </div>
}
