@page
@model DoneInAGiffy.Pages.GIFs.ViewGIFsModel
@{
    Layout = HttpContext.User.Identity.IsAuthenticated ? "_LayoutAuthenticated" : "_Layout";
}
<form method="post" class="form-group">
    <div class="row m-2">
        <div class="col-2">
            <label class="form-label">Category</label>
        </div>
        <div class="col-8">
            <select asp-for="CategoryId" asp-items="@Model.Categories"></select>
        </div>
        <div class="col-2">
            <button class="btn btn-primary" id="btnView">Display</button>
        </div>
    </div>

    @foreach (var gif in Model.GIFs)
    {
        <div class="row m-2 border">
            <div class="row m-2">
                <div class="col-2">
                    <div class="gif-item">
                        <img src="@gif.gifLink" alt="@gif.gifTitle" />
                    </div>
                </div>
            </div>
            <div class="row m-2">
                <div class="col-2">
                    <label class="form-label" asp-for="@gif.gifTitle"></label>
                </div>
                <div class="col-10">
                    <label class="form-label">@gif.gifTitle</label>
                </div>
            </div>
            <div class="row m-2">
                <div class="col-2">
                    <label class="form-label" asp-for="@gif.gifDescription"></label>
                </div>
                <div class="col-10">
                    <label class="form-label">@gif.gifDescription</label>
                </div>
            </div>
            <div class="row m-2">
                <div class="col-2">
                    <label class="form-label" asp-for="@gif.gifUploadDate"></label>
                </div>
                <div class="col-10">
                    <label class="form-label">@gif.gifUploadDate</label>
                </div>
            </div>
            <div class="row m-2">
                <div class="col-2">
                    <a asp-page="EditGIF" asp-route-itemid="@gif.gifID" class="btn btn-primary">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil-fill" viewBox="0 0 16 16">
                            <path d="M12.854.146a.5.5 0 0 0-.707 0L10.5 1.793 14.207 5.5l1.647-1.646a.5.5 0 0 0 0-.708zm.646 6.061L9.793 2.5 3.293 9H3.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.207zm-7.468 7.468A.5.5 0 0 1 6 13.5V13h-.5a.5.5 0 0 1-.5-.5V12h-.5a.5.5 0 0 1-.5-.5V11h-.5a.5.5 0 0 1-.5-.5V10h-.5a.5.5 0 0 1-.175-.032l-.179.178a.5.5 0 0 0-.11.168l-2 5a.5.5 0 0 0 .65.65l5-2a.5.5 0 0 0 .168-.11z" />
                        </svg>
                        Edit
                        </a>
                </div>
                <div class="col-2">
                    <a asp-page="DeleteGIF" asp-route-itemid="@gif.gifID" class="btn btn-danger">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash3-fill" viewBox="0 0 16 16">
                            <path d="M11 1.5v1h3.5a.5.5 0 0 1 0 1h-.538l-.853 10.66A2 2 0 0 1 11.115 16h-6.23a2 2 0 0 1-1.994-1.84L2.038 3.5H1.5a.5.5 0 0 1 0-1H5v-1A1.5 1.5 0 0 1 6.5 0h3A1.5 1.5 0 0 1 11 1.5m-5 0v1h4v-1a.5.5 0 0 0-.5-.5h-3a.5.5 0 0 0-.5.5M4.5 5.029l.5 8.5a.5.5 0 1 0 .998-.06l-.5-8.5a.5.5 0 1 0-.998.06m6.53-.528a.5.5 0 0 0-.528.47l-.5 8.5a.5.5 0 0 0 .998.058l.5-8.5a.5.5 0 0 0-.47-.528M8 4.5a.5.5 0 0 0-.5.5v8.5a.5.5 0 0 0 1 0V5a.5.5 0 0 0-.5-.5" />
                        </svg>
                        Delete
                    </a>
                </div>
            </div>
        </div>
    }
</form>
