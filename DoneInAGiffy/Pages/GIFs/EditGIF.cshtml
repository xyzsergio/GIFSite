@page
@model DoneInAGiffy.Pages.GIFs.EditGIFModel
@{
    Layout = HttpContext.User.Identity.IsAuthenticated ? "_LayoutAuthenticated" : "_Layout";
}

<div class="row m-2">
    <div class="col-2">
        <a asp-page="ViewGIFs" class="btn btn-primary">Back</a>
    </div>
</div>
<form method="post" class="form-group">
    <div class="row m-2">
        <div class="col-4">
            <h2>Edit GIF</h2>
        </div>
    </div>
    <div class="row m-2">
        <div class="col-2">
            <label asp-for="Item.gifTitle"></label>
        </div>
        <div class="col-10">
            <input type="text" class="form-control" asp-for="Item.gifTitle" />
        </div>
    </div>

    <div class="row m-2">
        <div class="col-2">
            <label asp-for="Item.gifDescription"></label>
        </div>
        <div class="col-10">
            <input type="text" class="form-control" asp-for="Item.gifDescription" />
        </div>
    </div>

    <div class="row m-2">
        <div class="col-2">
            <label asp-for="Item.gifLink"></label>
        </div>
        <div class="col-10">
            <input type="text" class="form-control" asp-for="Item.gifLink" />
        </div>
    </div>

    <div class="row m-2">
        <div class="col-2">
            <label asp-for="Item.gifCategoryID"></label>
        </div>
        <div class="col-10">
            <select asp-for="Item.gifCategoryID" asp-items="@Model.Categories"></select>
        </div>
    </div>

    <div class="row m-2">
        <div class="col-2">
            <input type="submit" value="Update" class="btn btn-primary"/>
        </div>
    </div>
</form>