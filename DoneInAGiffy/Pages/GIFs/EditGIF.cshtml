@page
@model DoneInAGiffy.Pages.GIFs.EditGIFModel
@{
    Layout = HttpContext.User.Identity.IsAuthenticated ? "_LayoutAuthenticated" : "_Layout";
}

<div class="row m-2">
    <div class="col-2">
        <a asp-page="ViewGIFs" class="btn btn-primary">Back</a>
    </div>
</div>
<form method="post" class="form-group">
    <div class="row m-2">
        <div class="col-2">
            <h2>Edit GIF</h2>
        </div>
    </div>

    <div class="row m-2">
        <div class="col-2">
            <label asp-for="GifItem.gifID"></label>
        </div>
        <div class="col-10">
            <input type="text" class="form-control" asp-for="GifItem.gifID" />
        </div>
        <!-- Other input fields remain the same -->
        <div class="col-2">
            <label asp-for="GifItem.gifLink"></label>
        </div>
        <div class="col-10">
            <input type="text" class="form-control" asp-for="GifItem.gifLink" />
        </div>
    </div>
    <div class="row m-2">
        <div class="col-2">
            <input type="submit" value="Update" class="btn btn-primary" />
        </div>
    </div>
</form>