@page
@model DoneInAGiffy.Pages.GIFs.AddGIFModel
@{
    Layout = HttpContext.User.Identity.IsAuthenticated ? "_LayoutAuthenticated" : "_Layout";
}
<div class="row m-2">
    <div class="col-2">
        <a asp-page="ViewGIFs" class="btn btn-primary">Back</a>
    </div>
</div>
<form method="post" class="form-group">
    <div class="row m-2">
        <div class="col-2">

            <label asp-for="newGIF.gifTitle"></label>
        </div>
        <div class="col-10">
            <input type="text" class="form-control" asp-for="newGIF.gifTitle" />
        </div>
    </div>

    <div class="row m-2">
        <div class="col-2">
            <label asp-for="newGIF.gifDescription"></label>
        </div>
        <div class="col-10">
            <input type="text" class="form-control" asp-for="newGIF.gifDescription" />
        </div>
    </div>

    <div class="row m-2">
        <div class="col-2">
            <label asp-for="newGIF.gifLink">GIF Link</label>
        </div>
        <div class="col-10">
            <input type="text" class="form-control" asp-for="newGIF.gifLink" />
        </div>
    </div>

    <div class="row m-2">
        <div class="col-2">
            <label asp-for="newGIF.gifCategoryID"></label>
        </div>
        <div class="col-10">
            <select asp-for="newGIF.gifCategoryID" asp-items="@Model.Categories"></select>
        </div>
    </div>

    <div class="row m-2">
        <div class="col-2">
            <button id="btnAdd" class="btn btn-primary">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-plus-lg" viewBox="0 0 16 16">
                    <path fill-rule="evenodd" d="M8 2a.5.5 0 0 1 .5.5v5h5a.5.5 0 0 1 0 1h-5v5a.5.5 0 0 1-1 0v-5h-5a.5.5 0 0 1 0-1h5v-5A.5.5 0 0 1 8 2" />
                </svg>
                Add GIF
                </button>
        </div>
    </div>
</form>