@page
@model DoneInAGiffy.Pages.GIFs.AddGIFModel
@{
    Layout = HttpContext.User.Identity.IsAuthenticated ? "_LayoutAuthenticated" : "_Layout";
}
<div class="row m-2">
    <div class="col-2">
        <a asp-page="ViewGIFs" class="btn btn-primary">Back</a>
    </div>
</div>
<form method="post" class="form-group">
    <div class="row m-2">
        <div class="col-2">
            <label asp-for="newGIF.gifID">GIF ID</label>
        </div>
        <div class="col-10">
            <input type="text" class="form-control" asp-for="newGIF.gifID" />
        </div>
        <div class="col-2">
            <label asp-for="newGIF.gifTitle">GIF Title</label>
        </div>
        <div class="col-10">
            <textarea class="form-control" asp-for="newGIF.gifTitle"></textarea>
        </div>
        <div class="col-2">
            <label asp-for="newGIF.gifDescription">Description</label>
        </div>
        <div class="col-10">
            <textarea class="form-control" asp-for="newGIF.gifDescription"></textarea>
        </div>
        <!-- Other input fields remain the same -->
        <div class="col-2">
            <label asp-for="newGIF.gifLink">GIF Link</label>
        </div>
        <div class="col-10">
            <input type="text" class="form-control" asp-for="newGIF.gifLink" />
        </div>
    </div>
    <div class="row m-2">
        <div class="col-2">
            <button id="btnAdd" class="btn btn-primary">Add GIF</button>
        </div>
        <div class="col-4">
            <select class="form-control" asp-for="newGIF.Category">
            <option value="">Select Category</option>
            <option value="Happy">Happy</option>
            <option value="Sad">Sad</option>
            <option value="Mad">Mad</option>
            <option value="Others">Others</option>
            </select>
        </div>
    </div>
</form>