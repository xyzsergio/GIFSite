@page
@model DoneInAGiffy.Pages.Account.ProfileModel
@{
    Layout = HttpContext.User.Identity.IsAuthenticated ? "_LayoutAuthenticated" : "_Layout";
}

<div class="container mt-3">
    <div class="row">
        <div class="col-md-3">
            <img src="data:image/jpeg;base64," class="img-fluid" alt="Profile Image">
            <div class="mt-2">
                <button class="btn btn-danger"><i class="bi bi-heart"></i> Like</button>
                <button class="btn btn-warning"><i class="bi bi-star"></i> Favorite</button>
                <a href="EditProfile" class="btn btn-primary"><i class="bi bi-pencil"></i> Edit Profile</a>
            </div>
        </div>
        <div class="col-md-9 mt-3">
            <h3 class="mb-3">Biography:</h3>
            <p>@Model.profile.ProfileDescription</p>
        </div>
    </div>
</div>